# ITerm2

alias ..='cd ..'

# Unix

# alias ll='ls -alG'
alias lll='ls -lG'
alias c='clear &&'

alias ll='exa -al --git --no-user'
alias lld='exa -ald */ --git --no-user'

## MacOS

alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

# Git

alias gitaa='git add --all'
alias gitcm='git commit -m'
alias gits='git status'
alias gitcb='git checkout -b'
alias gitdb='git branch -d'

# Gatsby

alias gatd="gatsby develop"
alias gatb="gatsby build"
alias gatc="gatsby clean"
alias gats="gatsby serve"
alias gatcb="gatsby clean && gatsby build"
